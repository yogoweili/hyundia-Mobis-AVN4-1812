#==================================================================
# D-Audio specific defines
#==================================================================

#==================================================================
# D-Audio ATAG
#==================================================================
DEFINES += ATAG_DAUDIO

#==================================================================
# D-Audio board
#==================================================================
DEFINES += TARGET_BOARD_DAUDIO

#==================================================================
# Define daudio board revision
#==================================================================
# 0x20130610 : DAUDIO SAT 2013/06/10
# DAUDIO_HW_REV=0x20130610

# 0x20131007 : DAUDIO 2nd 2013/10/07
#DEFINES += DAUDIO_HW_REV=0x20131007

# 0x20140220 : DAUDIO 3rd 2014/02/20
DEFINES += DAUDIO_HW_REV=0x20140220

#==================================================================
# D-Audio BSP version
#==================================================================
DEFINES += BSP_CLEINSOFT_VERSION=20150420

#==================================================================
# D-Audio BSP debug message
#==================================================================
DAUDIO_PRINT_DEBUG_MSG := 1

#==================================================================
# D-Audio ddr3 delay @ SK Hynix
#==================================================================
#DDR3_TIMING_PATCH := 1

#==================================================================
# D-Audio ddr3 infinite over clock test
#==================================================================
DDR3_INFINITE_OVER_CLOCK_TEST := 0

#==================================================================
# D-Audio eMMC speed mode
#==================================================================
#DEFINES += EMMC_SPEED_NORMAL
#DEFINES += EMMC_SPEED_HIGH
DEFINES += EMMC_SPEED_DDR

#==================================================================
# D-Audio LVDS Clock (TCC8931 -> TW8836)
#==================================================================
DEFINES += LVDS_CLK_33
#DEFINES += LVDS_CLK_45
#DEFINES += LVDS_CLK_50

#==================================================================
# D-Audio PMIC LTC3676
#==================================================================
DAUDIO_USE_PMIC_LTC3676 := 1

#==================================================================
# defines
#==================================================================
ifeq ($(DAUDIO_PRINT_DEBUG_MSG), 1)
	DEFINES += CONFIG_DAUDIO_PRINT_DEBUG_MSG
endif

ifeq ($(DDR3_TIMING_PATCH), 1)
	DEFINES += DDR3_TIMING_PATCH
endif

ifeq ($(DDR3_INFINITE_OVER_CLOCK_TEST), 1)
	DEFINES += DDR3_INFINITE_OVER_CLOCK_TEST
endif

ifeq ($(DAUDIO_USE_PMIC_LTC3676), 1)
	DEFINES += DAUDIO_USE_PMIC_LTC3676
endif
#================================================================== 		
#================================================================== 		
# D-Audio Update Partition  		
#================================================================== 		
DEFINES += DAUDIO_USE_UPDATE_PARTITION		
		
#================================================================== 

#==================================================================
# D-Audio Parking Guide define
#==================================================================
ifeq ($(EARLY_CAM_HAS_PARKING_GUIDE_LINE), true)
DEFINES += EARLY_CAM_SHOW_PARKING_GUIDE=1
endif

# SXM
ifeq ($(INCLUDE_XM), true)
DEFINES += INCLUDE_XM=1
endif

#==================================================================
# D-Audio SD-Card define
#==================================================================
ifeq ($(INCLUDE_SDCARD), true)
DEFINES += INCLUDE_SDCARD=1
endif

#==================================================================
# D-Audio Quickboot SIG
#==================================================================
ifneq ($(TARGET_PRODUCT),)
DEFINES_C += QUICKBOOT_SIG=\"$(TARGET_PRODUCT)\"
endif

#==================================================================
# D-Audio LVDS CAM
#==================================================================
#DEFINES += LVDS_CAM_ENABLE=1

#==================================================================
# objs
#==================================================================
LOCAL_DIR := $(GET_LOCAL_DIR)

OBJS += \
	$(LOCAL_DIR)/tw8836.o \
	$(LOCAL_DIR)/tw9912.o \
	$(LOCAL_DIR)/daudio_settings.o \
	$(LOCAL_DIR)/daudio_test.o \
	$(LOCAL_DIR)/daudio_ie.o \
	$(LOCAL_DIR)/daudio_ver.o \
	$(LOCAL_DIR)/bitmap.o \
	$(TOP)target/daudio_normal/daudio_ie_lut.o \
